<?xml version="1.0" encoding="utf-8"?>

<ContentPage
    x:Class="InvertoryHelper.View.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <TableView>
        <TableRoot>
            <TableSection Title="Documents" />
            <TableSection Title="References">
                <ViewCell>
                    <Button
                        Command="{Binding OpenReference}"
                        CommandParameter="Nomenclatures"
                        Text="Nomenclatures" />
                </ViewCell>
                <ViewCell>
                    <Button
                        Command="{Binding OpenReference}"
                        CommandParameter="Units"
                        Text="Units" />
                </ViewCell>
                <ViewCell>
                    <Button
                        Command="{Binding OpenReference}"
                        CommandParameter="NomenclatureKinds"
                        Text="Nomenclature kinds" />
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>