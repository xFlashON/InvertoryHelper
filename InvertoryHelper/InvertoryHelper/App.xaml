<?xml version="1.0" encoding="utf-8" ?>

<Application
    x:Class="InvertoryHelper.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>

        <ResourceDictionary>
            <Color x:Key="FormBackground">WhiteSmoke</Color>
            <Color x:Key="MainButtonColour">#3399FF</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource MainButtonColour}" />
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>